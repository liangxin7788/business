<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.fun.business.sharon.biz.business.dao.FileInfoMapper">

    <!-- 通用查询映射结果 -->
    <resultMap id="BaseResultMap" type="com.fun.business.sharon.biz.business.bean.FileInfo">
        <id column="id" property="id" />
        <result column="user_id" property="userId" />
        <result column="url" property="url" />
        <result column="size" property="size" />
        <result column="file_name" property="fileName" />
        <result column="file_introduce" property="fileIntroduce" />
        <result column="create_at" property="createAt" />
        <result column="update_at" property="updateAt" />
        <result column="path" property="path" />
    </resultMap>

    <!-- 通用查询结果列 -->
    <sql id="Base_Column_List">
        id, user_id, url, size, file_name, file_introduce, create_at, update_at, path
    </sql>

    <select id="getFileInfoListCount" resultType="java.lang.Integer">
        select count(1) from  file_info
        <where>
            1 = 1
            <if test="vo.beginTime != null">
                and create_at &gt; #{vo.beginTime}
            </if>
            <if test="vo.endTime != null">
                and create_at &lt; #{vo.endTime}
            </if>
            <if test="vo.fileName != null and vo.fileName != ''">
                and file_name like concat('%',#{vo.fileName},'%')
            </if>
            <if test="vo.description != null and vo.description != ''">
                and file_introduce like concat('%',#{vo.description},'%')
            </if>
        </where>
    </select>

    <select id="getFileInfoList" resultType="com.fun.business.sharon.biz.business.bean.FileInfo">
        select * from  file_info
        <where>
            1 = 1
            <if test="vo.beginTime != null">
                and create_at &gt; #{vo.beginTime}
            </if>
            <if test="vo.endTime != null">
                and create_at &lt; #{vo.endTime}
            </if>
            <if test="vo.fileName != null and vo.fileName != ''">
                and file_name like concat('%',#{vo.fileName},'%')
            </if>
            <if test="vo.description != null and vo.description != ''">
                and file_introduce like concat('%',#{vo.description},'%')
            </if>
        </where>
        order by update_at desc
        limit #{offset}, #{pageSize}
    </select>

</mapper>
